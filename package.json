{
  "name": "@tuplo/datecalc",
  "description": "Perform date calculations given a simple string pattern",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/datecalc.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "date"
  ],
  "files": [
    "cjs/index.js",
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": [
      {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs",
        "default": "./dist/index.js"
      },
      "./dist/index.js"
    ]
  },
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "esbuild": "0.14.16",
    "eslint": "8.8.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.0.0",
    "jest": "27.4.7",
    "nyc": "15.1.0",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "scripts": {
    "build": "bash sh/build.sh",
    "lint:ts": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test:coverage": "bash sh/coverage.sh",
    "test:ci": "jest --ci",
    "test": "jest --watch"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "import/extensions": 0,
      "jest/no-hooks": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  }
}
