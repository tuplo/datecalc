{
  "name": "@tuplo/datecalc",
  "description": "Perform date calculations given a simple string pattern",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/datecalc.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "date"
  ],
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/jest": "26.0.19",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "codecov": "3.7.2",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.15.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "husky": "4.3.5",
    "jest": "26.6.3",
    "microbundle": "0.12.4",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "scripts": {
    "ci:test": "jest --ci",
    "ci:test:coverage": "jest --ci --coverage",
    "build": "microbundle --sourcemap false --format cjs,modern --tsconfig tsconfig.build.json",
    "lint": "eslint src/**/*.ts",
    "test": "jest --watch",
    "ts-check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
