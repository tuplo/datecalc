{
  "name": "@tuplo/datecalc",
  "description": "Perform date calculations given a simple string pattern",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/datecalc.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "date"
  ],
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "codecov": "3.8.2",
    "esbuild": "0.11.20",
    "eslint": "7.26.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.6",
    "jest": "26.6.3",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4"
  },
  "scripts": {
    "ci:test": "jest --ci",
    "ci:test:coverage": "jest --ci --coverage",
    "build": "bash scripts/build.sh",
    "lint": "eslint src/**/*.ts",
    "test": "jest --watch",
    "ts-check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "import/extensions": 0,
      "jest/no-hooks": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  }
}
